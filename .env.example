# QuantTerminal Environment Configuration Template
# Copy this file to .env and fill in actual values
# NEVER commit .env to version control

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=QuantTerminal
APP_ENV=development
APP_DEBUG=True
APP_PORT=8000

# =============================================================================
# Database (Neon PostgreSQL) - Authoritative Storage
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database?sslmode=require
# Example: postgresql+asyncpg://neondb_owner:abc123@ep-cool-wave-12345.ap-southeast-1.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database?sslmode=require

# =============================================================================
# Cache & Realtime (Redis Cloud) - Performance Backbone
# =============================================================================
# Format: rediss://default:password@host:port (note: rediss = Redis with TLS)
# Example: rediss://default:abc123@redis-12345.c123.ap-southeast-1-1.ec2.cloud.redislabs.com:12345
REDIS_URL=rediss://default:password@host:port

# =============================================================================
# Object Storage (Cloudflare R2) - Charts, Images, Exports
# =============================================================================
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=quantterminal-assets
R2_ENDPOINT_URL=https://account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://cdn.quantforge.io

# =============================================================================
# Security & Authentication
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=generate_a_long_random_string_at_least_64_characters_change_this
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# =============================================================================
# Market Data Providers (Pluggable)
# =============================================================================
# Primary provider
POLYGON_API_KEY=

# Fallback provider
FINNHUB_API_KEY=

# Optional providers (uncomment if needed)
# ALPACA_API_KEY=
# ALPACA_SECRET_KEY=
# ALPHA_VANTAGE_API_KEY=

# =============================================================================
# CORS & Frontend
# =============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# =============================================================================
# AI Integration (QuantForge-AI Bridge) - Phase 3
# =============================================================================
# QUANTFORGE_AI_URL=https://api.quantforge-ai.internal
# QUANTFORGE_AI_SERVICE_TOKEN=

# =============================================================================
# Rate Limiting (Redis-based)
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Notes:
# 1. Copy this file: cp .env.example .env
# 2. Fill in actual credentials (never commit .env)
# 3. Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_urlsafe(64))"
# 4. Use async connection strings for PostgreSQL (postgresql+asyncpg://)
# 5. Redis with TLS uses rediss:// (double 's')
# =============================================================================
